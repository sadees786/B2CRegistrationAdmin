

<!DOCTYPE html>
<html lang="en-GB">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#5f2861" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" href="~/assets/favicon.ico" type="image/vnd.microsoft.icon" />
    <link rel="stylesheet" href="~/css/govuk-frontend-3.4.0.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />


</head>

<body class="govuk-template__body">
   
    <script>
        document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');
    </script>

    <gds-header>

        <gds-header-container>           
            <div class="govuk-header__logo float-left">
                <img src="/images/cqc-logo.png" class="govuk-header__logotype-crown-fallback-image" alt="Care Quality Commission" />
               
            </div>

            <gds-header-content>
                <a href="/" class="govuk-header__link govuk-header__link--service-name header_title">
                    Registration Administration Service </a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Logout" asp-controller="Account" id="SignOut" class="govuk-header__link" style="float: right;">
                            <strong>Sign out</strong>
                        </a>
                    }
</gds-header-content>

        </gds-header-container>

    </gds-header>

    <gds-container>
        <div class="govuk-phase-banner">
            
            
        </div>
       

        <gds-main-wrapper>

            @RenderBody()

        </gds-main-wrapper>

    </gds-container>


    <gds-footer>
        <gds-footer-container>
            <gds-footer-container-meta>
                <gds-footer-container-meta-item additional-styles="govuk-footer__meta-item--grow">

                    <h2 class="govuk-visually-hidden">Support links</h2>
                    <gds-ul class="govuk-footer__inline-list rightalign" list-id="footer-information-menu">
                                             <gds-li class="govuk-footer__inline-list-item" list-item-id="copyright">
                            &copy; Care Quality Commission @DateTime.Now.Year.ToString()
                        </gds-li>
                    </gds-ul>

                </gds-footer-container-meta-item>
            </gds-footer-container-meta>
        </gds-footer-container>
    </gds-footer>


    <script src="~/lib/jquery/jquery.slim.min.js" asp-append-version="true"></script>

    <script src="~/js/govuk-frontend-3.4.0.min.js"></script>
    <script>window.GOVUKFrontend.initAll()</script>

    @RenderSection("Scripts", required: false)
   
</body>
</html>
